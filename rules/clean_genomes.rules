rule clean_genomes:
    input:
        "data/genome/{prefix}.fasta"
#         "data/genome/potato_dm_v404_all_pm_un.fasta",
#         "data/genome/S_tuberosum_Group_Phureja_chloroplast_DM1-3-516-R44.fasta",
#         "data/genome/S_tuberosum_Group_Phureja_mitochondrion_DM1-3-516-R44.fasta"
    output:
        "data/genome/cleaned_{prefix}.fasta"
#         "data/genome/cleaned_potato_dm_v404_all_pm_un.fasta",
#         "data/genome/cleaned_S_tuberosum_Group_Phureja_chloroplast_DM1-3-516-R44.fasta",
#         "data/genome/cleaned_S_tuberosum_Group_Phureja_mitochondrion_DM1-3-516-R44.fasta"
    shell:
        "python scripts/clean_multifasta.py {input} > {output}"