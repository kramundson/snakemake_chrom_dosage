rule cutadapt_hardtrim:
    input:
        get_fastq_control
    output:
        fastq="data/trimmed/{sample}-{unit}.fastq.gz",
        qc="data/trimmed/{sample}-{unit}.qc.txt"
    threads: config["params"]["cutadapt-hardtrim"]["threads"]
    params:
        "-a {} {}".format(config["adapter"], config["params"]["cutadapt-hardtrim"]["qual"])
    log:
        "logs/cutadapt/{sample}-{unit}.log"
    wrapper:
        "0.17.4/bio/cutadapt/se"
